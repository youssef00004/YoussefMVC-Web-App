@page
@model YoussefWebRazor_Temp.Pages.Categories.DeleteModel
<form method="post">
    <input asp-for="category.CategoryID" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Delete Category
            </h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div> @*ModelOnly Or None*@
        <div class="mb-3 row">
            <label asp-for="category.Name" class="pd-0"></label>
            <input asp-for="category.Name" disabled class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="category.DisplayOrder" class="pd-0"></label>
            <input asp-for="category.DisplayOrder" disabled class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control rounded">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Categories/Index"  class="btn btn-primary form-control rounded">
                    Back to List
                </a>
            </div>
        </div>

    </div>
</form>


